            <geometry>
                <mesh filename="file://$(find drone)/meshes/prop1.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.125" radius="0.20" length="0.02">
            <origin xyz="-0.47 0.155 -0.22" rpy="${pi/2} 0 0" />
        </xacro:inertial_cylinder>
    </link>

